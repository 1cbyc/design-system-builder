// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  projects      Project[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  description    String?
  organizationId String?
  userId         String
  primaryColor   String   @default("#3B82F6")
  secondaryColor String   @default("#8B5CF6")
  typography     Json     @default("{}")
  spacing        Json     @default("{}")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  components Component[]
  themes     Theme[]
  pages      Page[]

  @@index([userId])
  @@index([slug])
}

model Component {
  id          String   @id @default(cuid())
  projectId   String
  name        String
  category    String
  description String?
  props       Json     @default("{}") // JSON schema for props
  code        String   @db.Text // JSX/Vue/Svelte code
  styles      String?  @db.Text // CSS/Tailwind styles
  variants    Json     @default("[]")
  examples    Json     @default("[]")
  version     String   @default("1.0.0")
  status      String   @default("draft") // draft, published
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  versions Version[]

  @@index([projectId])
  @@index([category])
  @@index([status])
}

model Theme {
  id           String   @id @default(cuid())
  projectId    String
  name         String
  colors       Json     @default("{}")
  typography   Json     @default("{}")
  spacing      Json     @default("{}")
  borderRadius Json     @default("{}")
  shadows      Json     @default("{}")
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([isDefault])
}

model Page {
  id        String   @id @default(cuid())
  projectId String
  slug      String
  title     String
  content   String   @db.Text // MDX content
  order     Int      @default(0)
  category  String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, slug])
  @@index([projectId])
  @@index([published])
}

model Version {
  id          String   @id @default(cuid())
  componentId String
  version     String
  changelog   String?  @db.Text
  code        String   @db.Text
  createdAt   DateTime @default(now())

  component Component @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@index([componentId])
  @@index([createdAt])
}
